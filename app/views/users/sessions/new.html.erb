



<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
    
    <%= f.text_field :email,id:"login", class:"fadeIn second",placeholder:"Email" %>
  

  
    
    <%= f.text_field :password,type:"password", autocomplete: "current-password",class:"fadeIn third",placeholder:"Password" %>
  

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in",class:"fadeIn fourth" %>
  </div>
<% end %>

<%= render "users/shared/links" %>

